<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="KgxCardView">
        <attr name="kg_text" format="string" />
        <attr name="kg_textColor" format="color" />
        <attr name="kg_image" format="integer|reference" />
        <attr name="kg_division_bg" format="reference|integer"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ToolButton">
        <attr name="tb_text" format="string|reference"/>
        <attr name="tb_textColor" format="color|reference"/>
        <attr name="tb_image" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="MoveTextView">
        <attr name="mtv_text" format="string|reference"/>
        <attr name="mtv_textColor" format="color|reference"/>
        <attr name="mtv_textSize" format="integer|reference" />
        <attr name="mtv_speed" format="integer|reference" />
    </declare-styleable>


</resources>
