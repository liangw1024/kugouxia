<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="16dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <com.liangwei.kugouxia.frame.CustomView.CircleImageView
            android:id="@+id/fragment_my_img_head"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:gravity="center"
            android:src="@mipmap/app_logo"/>

        <TextView
            android:id="@+id/fragment_my_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="酷狗侠"
            android:textSize="18dp" />

    </LinearLayout>

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/fragment_my_LSettingItem_MyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@mipmap/ic_my_message"
        app:leftText="我的资料" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/fragment_my_LSettingItem_MyPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@mipmap/ic_my_post"
        app:leftText="我的帖子" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/fragment_my_LSettingItem_MyCollection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@mipmap/ic_my_collection"
        app:leftText="我的收藏" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/fragment_my_LSettingItem_AboutWe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@mipmap/ic_about_we"
        app:leftText="关于我们" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/fragment_my_LSettingItem_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftIcon="@mipmap/ic_m_setting"
        app:leftText="设置" />

</LinearLayout>