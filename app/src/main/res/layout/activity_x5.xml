<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.tencent.smtt.sdk.WebView
        android:id="@+id/activity_x5_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="18">
    </com.tencent.smtt.sdk.WebView>
    <ProgressBar
        android:id="@+id/activity_x5_progressbar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:fitsSystemWindows="true"/>

    <LinearLayout
        android:id="@+id/activity_x5_layout_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/activity_x5_iv_navigation_back"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_webview_back"
            android:layout_weight="1"
            android:contentDescription="返回"/>
        <ImageView
            android:id="@+id/activity_x5_iv_navigation_next"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/ic_webview_next"
            android:layout_weight="1"
            android:contentDescription="前进"/>
        <ImageView
            android:id="@+id/activity_x5_iv_navigation_home"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/ic_webview_home"
            android:layout_weight="1"
            android:contentDescription="主页"/>
        <ImageView
            android:id="@+id/activity_x5_iv_navigation_refresh"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/ic_webview_refresh"
            android:layout_weight="1"
            android:contentDescription="刷新"/>

        <ImageView
            android:id="@+id/activity_x5_iv_navigation_exit"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/ic_webview_exit"
            android:layout_weight="1"
            android:contentDescription="exit"/>

    </LinearLayout>

</LinearLayout>
