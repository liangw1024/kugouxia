<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.liangwei.kugouxia.frame.CustomView.CircleImageView
        android:id="@+id/item_query_qqmusic_iv_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/app_logo"/>
    <TextView
        android:id="@+id/item_query_qqmusic_tv_musicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_query_qqmusic_iv_head"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:text="MusicName"
        android:textSize="17dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/item_query_qqmusic_tv_authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:layout_marginRight="20dp"
        android:text="AuthorName"
        android:textSize="15dp"
        android:textColor="#606060"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_query_qqmusic_iv_head"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#8b8b8b"/>
</RelativeLayout>