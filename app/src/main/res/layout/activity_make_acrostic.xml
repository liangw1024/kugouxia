<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_make_acrostic_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:navigationIcon="@mipmap/ic_back_white"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="藏头诗制作"
            app:titleTextColor="#ffffff"
            android:fitsSystemWindows="true"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/activity_make_acrostic_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_make_acrostic_toolbar"
        android:background="@color/colorPrimary"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextColor="#ffffff">

    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_make_acrostic_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_make_acrostic_tablayout">

    </androidx.viewpager.widget.ViewPager>



</androidx.percentlayout.widget.PercentRelativeLayout>
