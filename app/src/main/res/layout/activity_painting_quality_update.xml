<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liangwei.kugouxia.ui.activity.tools.PaintingQualityUpdateActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_painting_quality_update_appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_painting_quality_update_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:navigationIcon="@mipmap/ic_back_white"
            app:title="绝地求生:刺激战场 画质修改"
            app:titleTextColor="#ffffff"
            android:fitsSystemWindows="true"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/activity_painting_quality_update_img_gua"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@id/activity_painting_quality_update_appbarLayout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/banner_painting_quality_update"
        android:scaleType="fitXY"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/activity_painting_quality_update_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:entries="@array/list_painting_quality_update"
        android:spinnerMode="dialog"></androidx.appcompat.widget.AppCompatSpinner>
    <Button
        android:id="@+id/activity_painting_quality_update_btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_painting_quality_update_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:text="一键修改"
        android:textColor="#ffffff"
        android:background="@drawable/bg_toast"/>
    <TextView
        android:id="@+id/activity_painting_quality_update_tv_modelInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_painting_quality_update_btn_update"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="#ff0000"/>


</RelativeLayout>
