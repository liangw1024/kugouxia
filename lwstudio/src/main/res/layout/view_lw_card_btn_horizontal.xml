<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_lw_card_btn_horizontal_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#ffffff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/view_lw_card_btn_horizontal_LinearLayout_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/view_lw_card_btn_horizontal_iv_description"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="4dp"
                android:src="@android:drawable/ic_delete" />

            <TextView
                android:id="@+id/view_lw_card_btn_horizontal_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="良伟工作室" />

        </LinearLayout>

        <ImageView
            android:id="@+id/view_lw_card_btn_horizontal_iv_target"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/view_lw_card_btn_horizontal_LinearLayout_description"
            android:src="@android:drawable/ic_delete" />
        <ImageView
            android:id="@+id/view_lw_card_btn_horizontal_iv_division"
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:layout_below="@id/view_lw_card_btn_horizontal_LinearLayout_description"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:src="@android:drawable/ic_delete" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>
