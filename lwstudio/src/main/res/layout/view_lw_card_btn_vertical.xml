<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_lw_card_btn_vertical_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/view_lw_card_btn_vertical_LinearLayout_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="35dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="35dp">

            <ImageView
                android:id="@+id/view_lw_card_btn_vertical_iv_description"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="4dp"
                android:src="@android:drawable/ic_delete" />

            <TextView
                android:id="@+id/view_lw_card_btn_vertical_tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="良伟工作室" />

            <ImageView
                android:id="@+id/view_lw_card_btn_vertical_iv_division"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:src="@android:drawable/ic_delete" />

        </LinearLayout>


        <ImageView
            android:id="@+id/view_lw_card_btn_vertical_iv_target"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@id/view_lw_card_btn_vertical_LinearLayout_description"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:src="@android:drawable/ic_delete" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>

